<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenDSS.Wrapper"
        xmlns:local1="clr-namespace:OpenDSS.Wrapper;assembly=OpenDSS.Wrapper" x:Class="OpenDSS.Wrapper.MainWindow"
        mc:Ignorable="d" Height="450" Width="800">
    <Window.DataContext>
        <local1:DevicesProvider/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" Grid.Column="1">
            <TextBlock Text="{Binding MainDevice.DeviceInfo.SerialNumber, Mode=OneWay}"/>
            <TextBlock Text="{Binding MainDevice.LastError, Mode=OneWay}"/>
            <ComboBox Grid.Column="0" ItemsSource="{Binding MainDevice.DeviceInfo.Channels, Mode=OneWay}" DisplayMemberPath="ChannelNumber"/>

        </StackPanel>

    </Grid>
</Window>
