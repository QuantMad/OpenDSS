        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500">
    <Grid x:Name="maingrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

